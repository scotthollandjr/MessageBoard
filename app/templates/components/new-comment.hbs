{{#if addNewComment}}
<div>
  <form>
    <div class="form-group">
      {{input value=username id="username" placeholder="Username:"}}
    </div>

    <div class="form-group">
      {{input value=content id="content" placeholder="Comment:"}}
    </div>

    <div class="form-group">
      {{input value=date id="date" placeholder="Date:"}}
    </div>

    <button {{action 'save1'}}>Save</button>
  </form>
</div>
{{else}}
  <button {{action 'commentFormShow'}}>New Comment!</button>
{{/if}}
